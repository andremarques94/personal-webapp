{
    "name": "javascript-app-boilerplate",
    "version": "1.0.0",
    "description": "Small boilerplate for JavaScript applications",
    "type": "module",
    "main": "app.js",
    "engines": {
        "node": ">=20.11.1"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev": "npm run build:css && node scripts/dev.js",
        "build": "npm run build:css && node scripts/build.js",
        "build:css": "npx tailwindcss -i ./css/input.css -o ./css/stylesheet.css",
        "clean": "rm -rf public out",
        "lint": "eslint . --ext .js",
        "lint:fix": "eslint --fix ."
    },
    "keywords": ["javascript", "boilerplate", "template", "quick", "setup", "router", "starter"],
    "author": "NOZK",
    "license": "ISC",
    "devDependencies": {
        "autoprefixer": "^10.4.19",
        "esbuild": "0.20.2",
        "esbuild-style-plugin": "^1.6.3",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-recommended": "^4.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "postcss": "^8.4.38",
        "prettier": "3.2.5",
        "tailwindcss": "^3.4.3"
    }
}
